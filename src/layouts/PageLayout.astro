---
import Footer from "@components/Footer.astro";
import Head from "@components/Head.astro";
import Header from "@components/Header.astro";

type Props = {
  title: string;
  description: string;
  hideHeader?: boolean;
};

const { title, description, hideHeader = false } = Astro.props;

---

<!doctype html>
<html lang="pt-br">
  <head>
    <Head title={title} description={description} />
  </head>
  <body>
    {!hideHeader && <Header />}
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
